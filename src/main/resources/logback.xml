<configuration>   
   
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">   
    <!-- encoder 默认配置为PatternLayoutEncoder -->   
    <encoder>   
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5p %logger{60}.%M:%L - %msg%n</pattern>   
    </encoder>   
  </appender>   
   
  <root level="ERROR">             
    <appender-ref ref="STDOUT" />   
  </root>     
     
 </configuration>  